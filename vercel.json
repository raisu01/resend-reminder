{
  "version": 2,
 "builds": [
  {
    "src": "api/*.js",
    "use": "@vercel/node"
  },
  {
    "src": "package.json",
    "use": "@vercel/static-build",
    "config": {
      "distDir": "dist",
      "buildCommand": "npm run build"
    }
  }
],

  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1.js" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/dist/index.html" }
  ],

  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/dist/index.html"
    }
  ],

  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "s-maxage=1, stale-while-revalidate"
        }
      ]
    }
  ]
}
