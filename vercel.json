{
  "version": 2,
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "cd client && npm run build"
      }
    }
  ],
  "routes": [
    { "src": "/api/send", "dest": "/api/send.js" },
    { "src": "/api/dashboard", "dest": "/api/dashboard.js" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/client/dist/index.html" }
  ]
}
