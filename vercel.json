{
    "version": 2,
    "builds": [
      {
        "src": "api/*.js",
        "use": "@vercel/node"
      },
      {
        "src": "client/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "dist",
          "buildCommand": "npm run build"
        }
      }
    ],
    "routes": [
      {
        "src": "/api/send",
        "dest": "/api/send.js"
      },
      {
        "src": "/api/dashboard",
        "dest": "/api/dashboard.js"
      },
      {
        "handle": "filesystem"
      },
      {
        "src": "/assets/(.*)",
        "dest": "/client/dist/assets/$1"
      },
      {
        "src": "/(.*)",
        "dest": "/client/dist/index.html"
      }
    ]
  }
  