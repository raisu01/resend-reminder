{
    "version": 2,
    "builds": [
      {
        "src": "api/*.js",
        "use": "@vercel/node"
      },
      {
        "src": "client",
        "use": "@vercel/static-build",
        "config": {
          "buildCommand": "cd client && npm install && npm run build",
          "outputDirectory": "client/dist"
        }
      }
    ],
    "routes": [
      {
        "src": "/dashboard/api/requests",
        "dest": "/api/dashboard.js"
      },
      {
        "src": "/send",
        "dest": "/api/send.js"
      },
      {
        "src": "/(.*)",
        "dest": "/client/dist/$1",
        "continue": true
      },
      {
        "src": "/[^.]+",
        "dest": "/client/dist/index.html"
      }
    ]
  }
  